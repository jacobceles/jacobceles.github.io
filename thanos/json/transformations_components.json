{
  "schema": {
    "transformation": {
      "type": "array",
      "items": {
        "type": "object",
        "title": "Transformations",
        "properties": {
          "name": {
            "title": "Name of the resultant dataframe:",
            "required": true,
            "type": "string"
          },
          "source": {
            "title": "Name of the input dataframe:",
            "required": true,
            "type": "string"
          },
          "type": {
            "title": "Type",
            "default": "function",
            "type": "string"
          },
          "rename_space_cols": {
            "title": "Should Thanos remove spaces from the column names?",
            "type": "string",
            "enum": [
              "yes",
              "no"
            ]
          },
          "null_string_to_null_type": {
            "title": "Should Thanos change null strings to null type?",
            "type": "string",
            "enum": [
              "yes",
              "no"
            ]
          },
          "trim_string_values": {
            "title": "Should Thanos try trimming the string columns?",
            "type": "string",
            "enum": [
              "yes",
              "no"
            ]
          },
          "remove_html_tags": {
            "title": "Should HTML tags should be removed?",
            "type": "array",
            "items": {
              "title": "Column name:",
              "type": "string"
            }
          },
          "rename_columns": {
            "title": "Columns to be renamed:",
            "type": "textarea",
            "description": "Seperated by comma as shown in exampl"
          }
        }
      }
    }
  }
}